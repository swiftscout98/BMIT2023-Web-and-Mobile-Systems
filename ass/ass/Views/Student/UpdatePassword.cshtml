@model UpdatePasswordVM

@{
    Layout = "_StudentLayout";
    ViewBag.Title = "Update Password";
}

<form class="form" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Current"></label>
    <input asp-for="Current" autofocus>
    <span asp-validation-for="Current" class="text-danger"></span>
    <span></span>

    <label asp-for="New"></label>
    <input asp-for="New">
    <span asp-validation-for="New" class="text-danger"></span>
    <span></span>

    <label asp-for="Confirm"></label>
    <input asp-for="Confirm">
    <span asp-validation-for="Confirm" class="text-danger"></span>
    <span></span>

    <section>
        <button class="btn btn-primary">Update</button>
        <button class="btn btn-secondary" type="reset">Reset</button>
    </section>
</form>

