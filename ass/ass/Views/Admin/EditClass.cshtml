@model ClassVM
@{
    ViewBag.Title = "Admin | Edit Class";
}

<div class="main-content">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="EditClass" method="post" >
                <input type="hidden" asp-for="ClassId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ClassId">Class ID</label>
                            <input asp-for="ClassId" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="ClassName">Class Name</label>
                            <input asp-for="ClassName" class="form-control" />
                            <span asp-validation-for="ClassName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ClassDescription">Description</label>
                            <textarea asp-for="ClassDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ClassDescription" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status">Status</label>
                            <select asp-for="Status" class="form-control">
                                <option value="">Select Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Full">Full</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <a asp-action="ViewClass" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Update Class</button>
                </div>
            </form>
        </div>
    </div>
</div>