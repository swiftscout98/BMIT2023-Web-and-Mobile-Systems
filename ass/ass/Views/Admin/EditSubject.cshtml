@model SubjectVM
@{
    ViewBag.Title = "Admin | Edit Subject";
}

<div class="main-content">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="EditSubject" method="post">
                <input type="hidden" asp-for="SubjectId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SubjectId">Subject ID</label>
                            <input asp-for="SubjectId" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="SubjectName">Subject Name</label>
                            <input asp-for="SubjectName" class="form-control" />
                            <span asp-validation-for="SubjectName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SubjectDescription">Description</label>
                            <textarea asp-for="SubjectDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="SubjectDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <a asp-action="ViewSubject" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Update Subject</button>
                </div>
            </form>
        </div>
    </div>
</div>